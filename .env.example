# OpenAI API Key (Required for AI features - task analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (Required for learning path generation - Claude Sonnet 4.5)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration (Required - for job storage and authentication)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JobSpy Configuration (Required for automated job fetching)
# Directory where JobSpy will store CSV files (defaults to /tmp/jobspy)
JOBSPY_DIR=/tmp/jobspy

# Apify Configuration (Required for LinkedIn job scraping)
# Get your API token from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_api_token_here
# Dataset URL with token included for direct access
APIFY_DATASET_URL=https://api.apify.com/v2/datasets/YOUR_DATASET_ID/items?token=your_apify_api_token_here

# Cron Job Security (Required for production)
# Generate with: openssl rand -base64 32
CRON_SECRET=your_secure_random_string_here

# Base URL (Required for production, optional for development)
# Production: https://werkstudentjobs.com
# Development: http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional Settings
OPENAI_MODEL=gpt-4o-mini
PORT=3000